<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %-5p: %c - %m%n" />
		</layout>
	</appender>

	<appender name="admin-active" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="encoding" value="UTF-8" />
		<param name="file" value="C:/logs/portal-admin-active.log" />
		<!-- <param name="file" value="/data/log/tomcat/portal-admin-active.log" /> -->
		<param name="Append" value="true"/>
		<param name="DatePattern" value="'.'yyyyMMdd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %m%n"/>
		</layout>
	</appender>

	<!-- Application Loggers -->
	<logger name="kr.go.culture">
		<level value="debug" />
	</logger>

	<!-- 3rdparty Loggers -->
	<logger name="org.springframework">
		<level value="info" />
	</logger>
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>
	<logger name="org.springframework.web">
		<level value="info" />
	</logger>
	<logger name="org.springframework.security">
		<level value="info" />
	</logger>
	<logger name="org.springframework.jdbc">
		<level value="info" />
	</logger>

	<!-- db -->
	<logger name="jdbc.resultsettable">
		<level value="error" />
	</logger>
	<logger name="jdbc.audit"><!-- debug -->
		<level value="info" />
	</logger>
	<logger name="jdbc.resultset">
		<level value="error" />
	</logger>
	<logger name="jdbc.connection">
		<level value="info" />
	</logger>
	<logger name="java.sql.ResultSet">
		<level value="info" />
	</logger>
	<logger name="java.sql.PreparedStatement">
		<level value="debug" />
	</logger>

	<logger name="kr.go.culture.admin.interceptor.AdminMenuInterceptor" additivity="false">
		<level value="info" />
		<appender-ref ref="admin-active" />
		<appender-ref ref="console" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="debug" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>